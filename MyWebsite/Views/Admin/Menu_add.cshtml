@{
    ViewBag.Title = "Menu_add";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<style>
    .login-form {
        width: 340px;
        margin: 50px auto;
    }

        .login-form form {
            margin-bottom: 15px;
            background: none;
            box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 5), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
            padding: 30px;
        }

        .login-form h2 {
            margin: 0 0 15px;
        }

    .form-control, .btn {
        min-height: 38px;
        border-radius: 2px;
    }
</style>

<div class="login-form" style="color:#fff">
    <form action="/Admin/Menu_add" method="post" enctype="multipart/form-data">
        <h2 class=" text-center">
            ADD ITEM TO MENU
        </h2>
        <div class="form-group">
            Enter Item Name
            <input type="text" name="txtiname" class="form-control" required="required" onkeypress="return checkChar(event)">
        </div>
        <div class="form-group">
            Enter Item Description
            <textarea name="txtidesc" class="form-control" rows="3" required="required"></textarea>
        </div>
        <div class="form-group">
            Enter Item Price
            <input type="text" name="txtiprice" class="form-control" required="required" onkeypress="return checkNum(event)">
        </div>
        <div class="form-group">
            Enter Item Picture
            <input type="file" name="fupic" required="required">
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary btn-block">ADD</button>
        </div>
    </form>

</div>