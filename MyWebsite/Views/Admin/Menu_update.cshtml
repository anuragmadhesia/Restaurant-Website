@{
    ViewBag.Title = "Menu_update";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<style>
    .login-form {
        width: 500px;
        margin: 50px auto;
    }

        .login-form form {
            margin-bottom: 15px;
            background: none;
            box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 5), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
            padding: 30px;
        }

        .login-form h2 {
            margin: 0 0 15px;
        }

    .form-control, .btn {
        min-height: 38px;
        border-radius: 2px;
    }
</style>

<div class="login-form" style="color:#fff"> 
    <form action="/Admin/Menu_update" method="post" enctype="multipart/form-data">
        <h1 style="text-align:center;">Item Details To Edit</h1>
        <div class="form-group">
            Edit Item Name
            <input type="text" name="txtiname" class="form-control" value="@ViewBag.iname" required="required" onkeypress="return checkChar(event)">
            <input type="hidden" name="txtiid" class="form-control" value="@ViewBag.iid">
        </div>
        <div class="form-group">
            Edit Item Description
            <textarea name="txtidesc" class="form-control"  rows="3" required="required">@ViewBag.idesc</textarea>
        </div>
        <div class="form-group">
            Edit Item Price
            <input type="text" name="txtiprice" class="form-control" value="@ViewBag.iprice" required="required" onkeypress="return checkNum(event)">
        </div>
        <div class="form-group">
            Edit Item Picture
            <br />
            <img src="~/Content/image/@ViewBag.fupic" style="height:50px;width:50px;" />&nbsp&nbsp&nbsp<span>@ViewBag.fupic</span><br />
            <input type="file" name="fupicc">
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary btn-block">UPDATE</button>
        </div>
    </form>

</div>
